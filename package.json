{
  "name": "kutuphane-projesi",
  "author": "Arif Kabakçı",
  "description": "Kütüphane Yönetim Sistemi Masaüstü Uygulaması",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "homepage": "./",
  "main": "electron.cjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/comolas/kutuphane-projesi.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "start": "concurrently -k \"npm:dev\" \"electron .\"",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "@lottiefiles/dotlottie-react": "^0.15.2",
    "@types/jspdf": "^1.3.3",
    "chart.js": "^4.4.1",
    "electron-updater": "^6.6.2",
    "firebase": "^10.7.1",
    "jspdf": "^3.0.2",
    "lucide-react": "^0.303.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.1",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  },
  "build": {
    "appId": "com.arifkabakci.kutuphaneprojesi",
    "productName": "Kütüphane Projesi",
    "files": [
      "dist/**/*",
      "electron.cjs",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "publish": {
      "provider": "github"
    }
  }
}
