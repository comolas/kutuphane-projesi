{
  "name": "kutuphane-projesi",
  "author": "Arif Kabakçı",
  "description": "Kütüphane Yönetim Sistemi Masaüstü Uygulaması",
  "private": true,
  "version": "1.1.0",
  "type": "module",
  "homepage": "./",
  "main": "electron.cjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/comolas/kutuphane-projesi.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:analyze": "tsc && vite build --mode analyze",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "start": "electron .",
    "dist": "npm run build && electron-builder",
    "mobile:build": "npm run build && npx cap sync",
    "mobile:android": "npm run mobile:build && npx cap open android",
    "mobile:sync": "npx cap sync"
  },
  "dependencies": {
    "@capacitor-community/barcode-scanner": "^4.0.1",
    "@capacitor/android": "^7.4.3",
    "@capacitor/browser": "^7.0.2",
