    "terser": "^5.44.0",
    "typescript": "^5.2.2",
    "vite": "^7.1.9"
  },
  "build": {
    "appId": "com.arifkabakci.kutuphaneprojesi",
    "productName": "Kütüphane Projesi",
    "files": [
      "dist/**/*",
      "electron.cjs",
      "package.json",
      "preload.cjs"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "publish": {
      "provider": "github",
      "owner": "comolas",
      "repo": "kutuphane-projesi"
    }
  }
}
